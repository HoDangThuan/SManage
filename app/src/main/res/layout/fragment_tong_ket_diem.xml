            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm trung bình chung tích lũy: " />

            <TextView
                android:id="@+id/txtDiemTrungBinhChung"
                android:layout_width="wrap_content"
